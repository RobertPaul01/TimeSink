<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <fragment
        android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
        android:id="@+id/youtube_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/button_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_thumbsDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_thumb_down_black_36dp"
            android:clickable="true"
            android:layout_gravity="center_vertical"/>

        <Space android:layout_width="48sp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/bt_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Next"
            android:layout_marginTop="8sp"
            android:layout_gravity="center_vertical"/>

        <Space android:layout_width="48sp"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/ib_thumbsUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_thumb_up_black_36dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="@color/dividerColor"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/video_desc"
        android:layout_marginLeft="8sp"
            android:layout_marginBottom="8sp"
            android:layout_marginRight="8sp"
        android:padding="8sp"
        android:background="@color/colorPrimary"
        android:text=""
        android:textColor="@color/notWhite"
        android:scrollbars="vertical" />

</LinearLayout>